<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="sk_tabbar_bottom_nav_frame_linear" format="reference"/>

    <attr name="sk_tabbar_simpletab" format="reference"/>
    <attr name="sk_tabbar_simpletab_label" format="reference"/>
    <attr name="sk_tabbar_simpletab_tvcenter" format="reference"/>
    <attr name="sk_tabbar_simpletab_ivicon" format="reference"/>

    <attr name="sk_tabbar_colortab_root" format="reference"/>
    <attr name="sk_tabbar_colortab_ivicon" format="reference"/>
    <attr name="sk_tabbar_colortab_badge_style" format="reference"/>
    <attr name="sk_tabbar_colortab_badge_drawable" format="reference"/>


    <style name="sk_tabbar_bottom_nav_frame_linear_default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:clipChildren">false</item>
    </style>

    <style name="sk_tabbar_simpletab_default">


    </style>

    <style name="sk_tabbar_simpletab_label_default">
        <item name="android:textSize">8dp</item>
        <item name="android:textAllCaps">true</item>

    </style>

    <style name="sk_tabbar_simpletab_tvcenter_default">
        <item name="android:textSize">10dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>
    
    <style name="sk_tabbar_simpletab_ivicon_default">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
    </style>


    <style name="sk_tabbar_colortab_root_default">
        <item name="android:layout_height">@dimen/sk_tabbar_colortab_root_default_height</item>
    </style>

    <style name="sk_tabbar_colortab_ivicon_default">
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="sk_tabbar_colortab_badge_style_default">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">8dp</item>
        <item name="layout_constraintBottom_toTopOf">@id/ivIcon</item>
        <item name="layout_constraintLeft_toRightOf">@id/ivIcon</item>
    </style>


</resources>